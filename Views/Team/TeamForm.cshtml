@model SaveTeamViewModel
@{
    ViewData["Title"] = "Create Team";
}

<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default grouping">
        <div class="panel-body">
            <form class="form-horizontal" asp-controller="Team" asp-action="Create" method="post">
                <h4>Tạo đội bóng mới</h4>
                <hr />
                <div class="form-group">
                    <label asp-for="Name" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <input asp-for="Name" type="text" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CityId" class="col-md-4 control-label">Thành phố</label>
                    <div class="col-md-8">
                        <select asp-for="CityId" asp-items="@Model.Cities" class="form-control">
                            <option value="">Chọn thành phố của bạn</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DistrictId" class="col-md-4 control-label"></label>
                    <div class="col-md-8">
                        <select asp-for="DistrictId" class="form-control">
                            <option value="">Chọn quận của bạn</option>
                        </select>
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <button type="submit" class="btn btn-primary">Tạo đội</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_LocationFormScriptsPartial");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}