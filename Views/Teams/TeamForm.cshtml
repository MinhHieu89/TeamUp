@model SaveTeamViewModel
@{
    ViewData["Title"] = "Create Team";
}

<div class="card grouping">
    <form class="form-horizontal" asp-controller="Teams" asp-action="Create" method="post">
        <h4>Tạo đội bóng mới</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CityId" class="col-md-2 control-label">Thành phố</label>
            <div class="col-md-10">
                <select asp-for="CityId" asp-items="@Model.Cities" class="form-control">
                    <option value="">Chọn thành phố của bạn</option>
                </select>
                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DistrictId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="DistrictId" class="form-control">
                    <option value="">Chọn quận của bạn</option>
                </select>
                <span asp-validation-for="DistrictId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Tạo đội</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_LocationFormScriptsPartial");
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}