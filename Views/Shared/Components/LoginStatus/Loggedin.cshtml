@model ApplicationUser

<form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
    <ul class="nav navbar-nav navbar-right">
        <li class="notifications">
            <a href="#">
                <i class="glyphicon glyphicon-globe"></i>
                <span class="badge js-notifications-count hide"></span>
            </a>
        </li>
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.Name<span class="caret"></span></a>
            <ul class="dropdown-menu">
                @if (Model.TeamId.HasValue)
                {
                    <li><a asp-controller="Team" asp-action="Detail" asp-route-id="@Model.TeamId">Đội của tôi</a></li>
                }
                <li><a href="#">Thông tin tài khoản</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        </li>
    </ul>
</form>
